<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.andreiaribeiro.com.andreiaribeiro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LiberiixApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.register.RegisterActivity" />
        <activity android:name=".view.services.activities.ServicesListActivity" />
        <activity android:name=".view.settings.SettingsActivity" />
        <activity android:name=".view.payments.PaymentsActivity" />
        <activity android:name=".view.services.activities.ServicesFilterActivity" />
        <activity android:name=".view.chat.ChatActivity" />
        <activity android:name=".view.chat.MessageListActivity" />
        <activity android:name=".view.schedule.ScheduleActivity" />
        <activity android:name=".view.schedule.activities.ScheduleListActivity" />
    </application>

</manifest>